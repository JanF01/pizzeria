{% extends 'base.html.twig' %}

{% block title %}Dodaj nową pizzę{% endblock %}

{% block body %}
<div class="container">
{% for message in app.flashes('notice') %}
<div class="alert alert-danger" role="alert"> 
<h4 class="alert-heading">Sukces</h4>
<hr>
<p>{{ message }}</p>
</div>
{% endfor %}
<div class="row">
<div class="col-sm-12">
{{form_start(form)}}
<div class="col-md-12">
<div class="form-group col-md-4">
{{form_row(form.name)}}
</div>
<div class="form-group col-md-12">
{{form_row(form.description)}}
</div>
<div class="form-group col-md-2">
{{form_row(form.sprice)}}
</div>
<div class="form-group col-md-2">
{{form_row(form.mprice)}}
</div>
<div class="form-group col-md-2">
{{form_row(form.lprice)}}
</div>
<div class="form-group col-md-2">
{{form_row(form.papryczki)}}
</div>
<div class="form-group col-md-4 pull-right">
{{form_widget(form.create)}}
</div>
</div>
{{form_end(form)}}
</div>
</div>
</div>
{% endblock %}
