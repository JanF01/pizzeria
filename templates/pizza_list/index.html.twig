{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
{% if deleted==true %}
<div class="alert alert-danger" role="alert"> 
<h4 class="alert-heading">Sukces</h4>
<hr>
<p>Usunięto pizzę z bazy</p>
</div>
{% endif %}
<div class="table-responsive">
<table class="table table-striped table-hover">
<thead>
<tr>
<th scope="col">#</th>
<th class="col-sm-2" scope="col">Nazwa<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/name/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th class="col-sm-3" scope="col">Skład<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/description/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th class="col-sm-1" scope="col">Mała<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/sprice/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th class="col-sm-1" scope="col">Średnia<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/mprice/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th class="col-sm-1" scope="col">Duża<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/lprice/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th scope="col">Ostrość<a style="color:black;text-decoration:none;" href="/szukaj/{{search}}/papryczki/{{direction}}">&nbsp;<i class="fas fa-sort"></i></a></th>
<th scope="col">Edycja</th>
</tr>
</thead>
<tbody>
{% for pizza in pizzas %}
<tr>
<th scope="row">{{pizza.id}}</th>
<td>{{pizza.name}}</td>
<td>{{pizza.description}}</td>
<td>{{pizza.sprice}}</td>
<td>{{pizza.mprice}}</td>
<td>{{pizza.lprice}}</td>
<td>
{% if pizza.papryczki>0 %}
{% for i in 1 .. pizza.papryczki %}
<img src="{{ asset('build/peper.png') }}" width="24px" height="30px">
{% endfor %}
{% endif %}
</td>
<td>
<a href="/delete/{{pizza.id}}">Usuń</a>
<a href="/modify/{{pizza.id}}">Modyfikuj</a>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
{% endblock %}
